#!/usr/bin/env ruby

require_relative '../lib/tester'
require 'thor'

class CLI < Thor

  #
  # run
  #
  desc "status", "Find dirty tests in your git status and run them"
  option :all_engines, :type => :boolean, :desc => 'Run all tests found.'
  def status
    Tester.status(options)
  end

  #
  # run
  #
  desc "find", "Find a test and run it"
  def find(input)
    Tester.find(input, options)
  end

  default_task :test_run


end

CLI.start(ARGV)
